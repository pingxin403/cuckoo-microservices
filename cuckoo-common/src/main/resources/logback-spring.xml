<?xml version="1.0" encoding="UTF-8"?>
<!--
    通用结构化日志配置（JSON 格式 + traceId）
    各微服务通过依赖 cuckoo-common 自动引入此配置。
    日志输出为 JSON 格式，包含 traceId 字段以便与链路追踪关联。
-->
<configuration>

    <!-- 从 Spring 环境中读取应用名称 -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="cuckoo-app"/>

    <!-- 控制台输出 - JSON 格式 -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>traceId</includeMdcKeyName>
            <includeMdcKeyName>spanId</includeMdcKeyName>
            <customFields>{"service":"${APP_NAME}"}</customFields>
            <timeZone>UTC</timeZone>
        </encoder>
    </appender>

    <!-- 控制台输出 - 普通文本格式（开发环境使用） -->
    <appender name="CONSOLE_TEXT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [traceId=%X{traceId:-} spanId=%X{spanId:-}] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logstash TCP 输出 - 异步发送到 ELK Stack -->
    <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <destination>logstash.logging.svc.cluster.local:5000</destination>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>traceId</includeMdcKeyName>
            <includeMdcKeyName>spanId</includeMdcKeyName>
            <customFields>{"service":"${APP_NAME}"}</customFields>
            <timeZone>UTC</timeZone>
        </encoder>
        <!-- 连接超时 -->
        <connectionTimeout>5000</connectionTimeout>
        <!-- 写入超时 -->
        <writeTimeout>5000</writeTimeout>
        <!-- 重连延迟 -->
        <reconnectionDelay>10000</reconnectionDelay>
        <!-- 队列大小（异步发送，避免阻塞业务） -->
        <queueSize>512</queueSize>
    </appender>

    <!-- 异步 Logstash appender（避免阻塞业务线程） -->
    <appender name="ASYNC_LOGSTASH" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="LOGSTASH"/>
        <!-- 队列满时不阻塞，丢弃日志 -->
        <neverBlock>true</neverBlock>
        <!-- 队列大小 -->
        <queueSize>512</queueSize>
        <!-- 队列剩余容量小于此值时丢弃 TRACE, DEBUG, INFO 日志 -->
        <discardingThreshold>0</discardingThreshold>
    </appender>

    <!-- 生产环境 profile：使用 JSON 格式输出 + Logstash -->
    <springProfile name="prod,production">
        <root level="INFO">
            <appender-ref ref="CONSOLE_JSON"/>
            <appender-ref ref="ASYNC_LOGSTASH"/>
        </root>
    </springProfile>

    <!-- 开发环境 profile：使用文本格式输出（便于阅读） -->
    <springProfile name="dev,default">
        <root level="INFO">
            <appender-ref ref="CONSOLE_TEXT"/>
        </root>
    </springProfile>

    <!-- 降低第三方库日志级别 -->
    <logger name="org.apache.kafka" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.springframework" level="INFO"/>
    <logger name="com.pingxin403.cuckoo" level="DEBUG"/>

</configuration>
