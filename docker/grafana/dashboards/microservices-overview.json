{
  "annotations": {
    "list": []
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "请求量（QPS）- 各微服务",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{application=~\"$application\"}[1m])) by (application)",
          "legendFormat": "{{application}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "响应时间 P99（ms）- 各微服务",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_server_requests_seconds_bucket{application=~\"$application\"}[1m])) by (le, application)) * 1000",
          "legendFormat": "{{application}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "错误率（5xx）- 各微服务",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          },
          "min": 0,
          "max": 1
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{application=~\"$application\", status=~\"5..\"}[1m])) by (application) / sum(rate(http_server_requests_seconds_count{application=~\"$application\"}[1m])) by (application)",
          "legendFormat": "{{application}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "JVM 堆内存使用（MB）- 各微服务",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "decmbytes",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "sum(jvm_memory_used_bytes{application=~\"$application\", area=\"heap\"}) by (application) / 1024 / 1024",
          "legendFormat": "{{application}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "HTTP 请求按状态码分布",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum(increase(http_server_requests_seconds_count{application=~\"$application\"}[5m])) by (status)",
          "legendFormat": "HTTP {{status}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "JVM 线程数 - 各微服务",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "jvm_threads_live_threads{application=~\"$application\"}",
          "legendFormat": "{{application}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "GC 暂停时间（ms）- 各微服务",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 50
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "expr": "sum(rate(jvm_gc_pause_seconds_sum{application=~\"$application\"}[1m])) by (application) * 1000",
          "legendFormat": "{{application}}",
          "refId": "A"
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "tags": ["microservices", "cuckoo"],
  "templating": {
    "list": [
      {
        "current": {
          "selected": true,
          "text": "All",
