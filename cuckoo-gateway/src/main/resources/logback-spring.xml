<?xml version="1.0" encoding="UTF-8"?>
<!--
    API Gateway 日志配置
    包含日志轮转策略：每日轮转、保留 30 天、单文件最大 100MB
-->
<configuration>

    <!-- 从 Spring 环境中读取应用名称 -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="cuckoo-gateway"/>

    <!-- 日志文件路径 -->
    <property name="LOG_PATH" value="logs"/>
    <property name="LOG_FILE" value="${LOG_PATH}/${APP_NAME}"/>

    <!-- 控制台输出 - JSON 格式 -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>traceId</includeMdcKeyName>
            <includeMdcKeyName>spanId</includeMdcKeyName>
            <customFields>{"service":"${APP_NAME}"}</customFields>
            <timeZone>UTC</timeZone>
        </encoder>
    </appender>

    <!-- 控制台输出 - 普通文本格式（开发环境使用） -->
    <appender name="CONSOLE_TEXT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [traceId=%X{traceId:-} spanId=%X{spanId:-}] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 文件输出 - 滚动策略 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [traceId=%X{traceId:-} spanId=%X{spanId:-}] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        
        <!-- 滚动策略：基于时间和大小 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- 每日轮转，文件名格式：cuckoo-gateway.2026-02-12.0.log -->
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            
            <!-- 单个日志文件最大 100MB -->
            <maxFileSize>100MB</maxFileSize>
            
            <!-- 保留 30 天的日志 -->
            <maxHistory>30</maxHistory>
            
            <!-- 所有日志文件总大小上限 10GB -->
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- 生产环境 profile：使用 JSON 格式输出到控制台 + 文件 -->
    <springProfile name="prod,production">
        <root level="INFO">
            <appender-ref ref="CONSOLE_JSON"/>
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>

    <!-- 开发环境 profile：使用文本格式输出到控制台 -->
    <springProfile name="dev,default">
        <root level="INFO">
            <appender-ref ref="CONSOLE_TEXT"/>
        </root>
    </springProfile>

    <!-- 降低第三方库日志级别 -->
    <logger name="org.apache.kafka" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.springframework" level="INFO"/>
    <logger name="com.pingxin403.cuckoo" level="DEBUG"/>

</configuration>
